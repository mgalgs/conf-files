[user]
	email = mitch.special@gmail.com
	name = Mitchel Humpherys
[push]
	default = simple
[color]
	branch = auto
	diff = auto
	grep = auto
	pager = true
	status = auto
[core]
	excludesfile = /home/mgalgs/.gitignore
	pager = less -R -F -X
	abbrev = 10
[alias]
	gr = log --graph --full-history --all --color --decorate --oneline
	grjustme = log --graph --full-history --color --decorate --oneline
	grquick = log --graph --full-history --color --decorate --oneline HEAD~50..
	grdate = log --graph --full-history --all --color --decorate --date=relative --pretty=tformat:'%Cgreen%h %Creset(%Cred%an%Cgreen|%Cblue%ad%Creset) %Creset%s %Cgreen%d'
	loneline = log --oneline
	ribbon-set = tag --force _ribbon origin/master
	ribbon-catchup = log --patch --reverse --topo-order _ribbon..origin/master
	toplevel = rev-parse --show-toplevel
[merge]
	tool = meld
[push]
	default = simple
