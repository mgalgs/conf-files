#         diff = diff-highlight | less
[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = mitch.special@gmail.com
    smtpserverport = 587
[rebase]
	autosquash = true
	autostash = true
